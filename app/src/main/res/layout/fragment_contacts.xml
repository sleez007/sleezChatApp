<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="ng.novacore.sleezchat.ui.chat.contacts.FragmentContactsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_layout"
        tools:context=".ui.chat.contacts.FragmentContacts">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_bar_layout"
            android:background="@color/toolbar_color"
            android:theme="@style/ThemeOverlay.MaterialComponents">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:menu="@menu/main_menu"
                app:title="My contacts"
                app:subtitle="125 contacts"
                android:layout_height="?attr/actionBarSize"
                tools:visibility="visible"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents" />
            <com.miguelcatalan.materialsearchview.MaterialSearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:textColorHint="@color/toolbar_icon"
                android:hint="Search for amazing colognes"
                android:layout_height="wrap_content"
                />
        </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".ui.brands.BrandFragment"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <include
                        android:id="@+id/loading"
                        layout="@layout/layout_loading"
                        android:visibility="@{ vm.loading &amp;&amp; !vm.isDataAvailable ? View.VISIBLE : View.GONE }"
                        tools:visibility="gone" />

                    <include
                        android:id="@+id/nothing"
                        layout="@layout/layout_no_item"
                        android:visibility="@{!vm.isDataAvailable &amp;&amp; !vm.loading &amp;&amp; !vm.isError ? View.VISIBLE:View.GONE}"
                        tools:visibility="gone" />

                    <include
                        android:id="@+id/error"
                        layout="@layout/layout_error"
                        android:visibility="@{!vm.isDataAvailable &amp;&amp; !vm.loading &amp;&amp; vm.isError ? View.VISIBLE:View.GONE}"
                        tools:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingTop="16dp"
                        android:visibility="@{vm.isDataAvailable ? View.VISIBLE : View.GONE }"
                        app:data="@{vm.myContacts}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/row_contact" />
                </LinearLayout>

                <ng.novacore.sleezchat.views.RecyclerViewFastScroller
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:id="@+id/fastscroll"
                    android:visibility="@{vm.isDataAvailable ? View.VISIBLE : View.GONE }"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>