<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="ng.novacore.sleezchat.ui.chat.contacts.FragmentContactsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_layout"
        tools:context=".ui.chat.contacts.FragmentContacts">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_bar_layout"
            android:background="@color/toolbar_color"
            android:theme="@style/ThemeOverlay.MaterialComponents">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:menu="@menu/main_menu"
                app:title="My contacts"
                app:subtitle="125 contacts"
                android:layout_height="?attr/actionBarSize"
                tools:visibility="visible"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents" />
            <com.miguelcatalan.materialsearchview.MaterialSearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:textColorHint="@color/toolbar_icon"
                android:hint="Search for amazing colognes"
                android:layout_height="wrap_content"
                />
        </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:refreshListener="@{vm}"
            app:shouldRefresh="@{vm.loading}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".ui.brands.BrandFragment">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <include
                    layout="@layout/layout_loading"
                    android:visibility="@{ vm.loading &amp;&amp; !vm.isDataAvailable ? View.VISIBLE : View.GONE }"
                    android:id="@+id/loading"
                    tools:visibility="gone" />
                <include layout="@layout/layout_no_item" tools:visibility="gone" android:id="@+id/nothing"
                    android:visibility="@{!vm.isDataAvailable &amp;&amp; !vm.loading &amp;&amp; !vm.isError ? View.VISIBLE:View.GONE}"/>
                <include layout="@layout/layout_error" tools:visibility="gone" android:id="@+id/error"
                    android:visibility="@{!vm.isDataAvailable &amp;&amp; !vm.loading &amp;&amp; vm.isError ? View.VISIBLE:View.GONE}"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/row_contact"
                    app:data="@{vm.myContacts}"
                    android:paddingTop="16dp"
                    android:clipToPadding="false"
                    android:visibility="@{vm.isDataAvailable ? View.VISIBLE : View.GONE }"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>